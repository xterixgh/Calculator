<Window
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="270"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="#0089FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Name="numbersTbl"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Width="200"
            Height="50"
            VerticalAlignment="Center"
            Background="#00C4FF"
            FontSize="40"
            Foreground="#FF3399" />
        <Button
            x:Name="One"
            Grid.Row="1"
            Background="#FF3399"
            Click="One_Click"
            Content="1"
            Foreground="#00FFFF" />
        <Button
            x:Name="Two"
            Grid.Row="1"
            Grid.Column="1"
            Background="#FF3399"
            Click="One_Click"
            Content="2"
            Foreground="#00FFFF" />
        <Button
            x:Name="Three"
            Grid.Row="1"
            Grid.Column="2"
            Background="#FF3399"
            Click="One_Click"
            Content="3"
            Foreground="#00FFFF" />
        <Button
            x:Name="Clear"
            Grid.Row="1"
            Grid.Column="3"
            Background="#99004C"
            Click="Clear_Click"
            Content="C"
            Foreground="#00FFFF" />
        <Button
            x:Name="Four"
            Grid.Row="2"
            Background="#FF3399"
            Click="One_Click"
            Content="4"
            Foreground="#00FFFF" />
        <Button
            x:Name="Five"
            Grid.Row="2"
            Grid.Column="1"
            Background="#FF3399"
            Click="One_Click"
            Content="5"
            Foreground="#00FFFF" />
        <Button
            x:Name="Six"
            Grid.Row="2"
            Grid.Column="2"
            Background="#FF3399"
            Click="One_Click"
            Content="6"
            Foreground="#00FFFF" />
        <Button
            x:Name="multiply"
            Grid.Row="2"
            Grid.Column="3"
            Background="#99004C"
            Click="OperationButton_Click"
            Content="*"
            Foreground="#00FFFF" />
        <Button
            x:Name="Seven"
            Grid.Row="3"
            Background="#FF3399"
            Click="One_Click"
            Content="7"
            Foreground="#00FFFF" />
        <Button
            x:Name="Eight"
            Grid.Row="3"
            Grid.Column="1"
            Background="#FF3399"
            Click="One_Click"
            Content="8"
            Foreground="#00FFFF" />
        <Button
            x:Name="Nine"
            Grid.Row="3"
            Grid.Column="2"
            Background="#FF3399"
            Click="One_Click"
            Content="9"
            Foreground="#00FFFF" />
        <Button
            x:Name="Divide"
            Grid.Row="3"
            Grid.Column="3"
            Background="#99004C"
            Click="OperationButton_Click"
            Content="/"
            Foreground="#00FFFF" />
        <Button
            x:Name="Plus"
            Grid.Row="4"
            Grid.Column="0"
            Background="#99004C"
            Click="OperationButton_Click"
            Content="+"
            Foreground="#00FFFF" />
        <Button
            x:Name="Zero"
            Grid.Row="4"
            Grid.Column="1"
            Background="#FF3399"
            Click="One_Click"
            Content="0"
            Foreground="#00FFFF" />
       <Button
            x:Name="Minus"
            Grid.Row="4"
            Grid.Column="2"
            Background="#99004C"
            Click="OperationButton_Click"
            Content="-"
            Foreground="#00FFFF" />
        <Button x:Name="DecimalPoint" Content="." Click="DecimalPoint_Click" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"
                FontSize="40"
                Background="#FF3399"
                Foreground="#00FFFF"/>
        <Button
            x:Name="Equally"
            Grid.Row="4"
            Grid.Column="3"
            Background="#99004C"
            Click="Equally_Click"
            Content="="
            Foreground="#00FFFF" />
    </Grid>


</Window>
